<div
  class="flex flex-col justify-between p-6 space-y-6 text-white bg-gray-900 rounded-lg shadow-2xl"
>
  <div class="space-y-2">
    <h3 class="text-2xl font-medium">
      {{ name | capitalize }}
    </h3>
    <p>
      {{ description }}
    </p>
    <p>
      <strong>Built with:</strong>
      {{ built_with | join: ", " }}
    </p>
  </div>
  <div class="flex justify-end space-x-2">
    {%- if preview_url -%}
    <a
      class="block px-3 py-2 font-medium uppercase border-2 border-gray-100 rounded-full hover:bg-gray-100 hover:text-black"
      href="{{ preview_url }}"
      target="_blank"
    >
      Preview
    </a>
    {%- endif -%} {%- if url -%}
    <a
      class="block px-3 py-2 font-medium uppercase border-2 border-gray-100 rounded-full hover:bg-gray-100 hover:text-black"
      href="{{ url }}"
      target="_blank"
    >
      View code
    </a>
    {%- endif -%}
  </div>
</div>
